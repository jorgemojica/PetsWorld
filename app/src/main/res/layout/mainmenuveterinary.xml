    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="2">

            <GridLayout
                android:columnCount="1"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/btnCitas"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/calendar"
                    android:backgroundTint="#80FFFFFF"/>

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="@string/txtAppointments"
                    android:textSize="20dp"/>
            </GridLayout>

            <GridLayout
                android:columnCount="1"
                android:rowCount="2">

                <ImageButton

                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:backgroundTint="#80FFFFFF"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/agenda2"/>

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:text="@string/txtNomenclaturas"
                    android:textSize="20dp"/>
            </GridLayout>

            <GridLayout
                android:columnCount="1"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/btnCustomers"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/customers"
                    android:backgroundTint="#80FFFFFF"/>

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="@string/txtCustomers"
                    android:textSize="20dp"/>
            </GridLayout>

            <GridLayout
                android:columnCount="1"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/btnPacientes"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/pets"
                    android:backgroundTint="#80FFFFFF"/>

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="@string/txtPacientes"
                    android:textSize="20dp"/>
            </GridLayout>

            <GridLayout
                android:columnCount="1"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/btnNovedades"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/news"
                    android:backgroundTint="#80FFFFFF"/>

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="@string/txtNews"
                    android:textSize="20dp"/>
            </GridLayout>

            <GridLayout
                android:columnCount="1"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/btnChat"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/chat"
                    android:backgroundTint="#80FFFFFF"/>

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="@string/txtChat"
                    android:textSize="20dp"/>
            </GridLayout>

            <GridLayout
                android:columnCount="1"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/btnHistorial"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/historial"
                    android:backgroundTint="#80FFFFFF"/>

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="@string/txtHistorial"
                    android:textSize="20dp"/>
            </GridLayout>

            <GridLayout
                android:columnCount="1"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/btnInfo"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/info"
                    android:backgroundTint="#80FFFFFF"/>

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="@string/txtInfo"
                    android:textSize="20dp"/>
            </GridLayout>

            <GridLayout
                android:columnCount="1"
                android:rowCount="2">

                <ImageButton
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/profile"
                    android:backgroundTint="#80FFFFFF"/>

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="@string/txtProfile"
                    android:textSize="20dp"/>
            </GridLayout>
        </GridLayout>
    </RelativeLayout>

</RelativeLayout>